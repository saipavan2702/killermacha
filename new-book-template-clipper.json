{
	"schemaVersion": "0.1.0",
	"name": "new book template",
	"behavior": "create",
	"noteContentFormat": "> [!info] tldr\n> - {{\"a 250 character summary of what the book is about in plain english and in lowercase\"}}\n\n![]({{image}})\n\n## notes \n\n",
	"properties": [
		{
			"name": "tags",
			"value": "books",
			"type": "multitext"
		},
		{
			"name": "author",
			"value": "[[{{schema:@Book:author[0].name}}]]",
			"type": "multitext"
		},
		{
			"name": "last read",
			"value": "",
			"type": "date"
		},
		{
			"name": "summary",
			"value": "",
			"type": "multitext"
		},
		{
			"name": "rating",
			"value": "",
			"type": "text"
		},
		{
			"name": "categories",
			"value": "[[books.base]]",
			"type": "multitext"
		},
		{
			"name": "status",
			"value": "want to read",
			"type": "text"
		},
		{
			"name": "published",
			"value": "{{\\\"date object of when the book was published\\\"}}",
			"type": "date"
		}
	],
	"triggers": [
		"https://www.goodreads.com/"
	],
	"noteNameFormat": "{{schema:@Book:name}}",
	"path": "books"
}